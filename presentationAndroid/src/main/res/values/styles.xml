<resources>

    <style name="AlxDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorTextHeader</item>

        <item name="android:colorForeground">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorBackground</item>


    </style>

    <style name="AlxText" parent="AlxDarkTheme">
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="AlxTextHeader" parent="AlxText">
        <item name="android:textSize">@dimen/textSizeHeaderLarge</item>
    </style>
    <style name="AlxTextHeader.Medium" parent="AlxTextHeader">
        <item name="android:textSize">@dimen/textSizeHeaderMedium</item>
    </style>
    <style name="AlxTextHeader.Small" parent="AlxTextHeader">
        <item name="android:textSize">@dimen/textSizeHeaderSmall</item>
    </style>
    <style name="AlxTextHeader.Medium.Dark" parent="AlxTextHeader.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AlxTextHeader.Small.Dark" parent="AlxTextHeader.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AlxTextHeader.Medium.Light" parent="AlxTextHeader.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AlxTextHeader.Small.Light" parent="AlxTextHeader.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
