<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bar_large"
        android:padding="@dimen/default_padding"
        app:cardBackgroundColor="@color/colorBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin">

        <TextView
                android:id="@+id/discipline_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/discipline_time_icon"
                app:layout_constraintBottom_toTopOf="@+id/professor_name"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.5"
                style="@style/AlxTextHeader.Medium"
                android:scrollHorizontally="true"
                android:lines="2"
                android:ellipsize="end"
                tool:text="Интеллектуальные системы и технологии"/>
        <ImageView
                android:id="@+id/discipline_time_icon"
                android:layout_width="@dimen/width_icon_small"
                android:layout_height="@dimen/height_icon_small"
                android:contentDescription="@string/time"
                app:layout_constraintStart_toEndOf="@id/discipline_name"
                app:layout_constraintEnd_toStartOf="@id/discipline_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/discipline_time"
                app:srcCompat="@drawable/ic_baseline_access_time"/>
        <TextView
                android:id="@+id/discipline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/discipline_time_icon"
                app:layout_constraintHorizontal_bias="0.5"
                tool:text="10:00-11:00"/>
        <ImageView
                android:id="@+id/professor_icon"
                android:layout_width="@dimen/width_icon_small"
                android:layout_height="@dimen/height_icon_small"
                android:contentDescription="@string/professor"
                app:srcCompat="@drawable/ic_baseline_assignment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/professor_name"/>
        <TextView
                android:id="@+id/professor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/professor_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/location"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                tool:text="Вася Пупкинsssss "
                app:layout_constraintTop_toBottomOf="@+id/discipline_name"/>

        <ImageView
                android:id="@+id/location_icon"
                android:layout_width="@dimen/width_icon_small"
                android:layout_height="@dimen/height_icon_small"
                app:layout_constraintStart_toEndOf="@id/professor_name"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/location"
                app:srcCompat="@drawable/ic_baseline_location_on"
                android:contentDescription="@string/location"/>
        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/location_icon"
                app:layout_constraintHorizontal_bias="0.5"
                tool:text="7-123"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>