<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="85dp"
                                   android:layout_margin="@dimen/default_margin"
                                   app:cardCornerRadius="@dimen/default_radius">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNotDone"
            android:layout_margin="@dimen/default_margin"

    >
        <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/AlxTextHeader.Medium.Dark"
                tools:text="Some task #1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/time_start_finish_group"/>
        <LinearLayout
                android:id="@+id/time_start_finish_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:id="@+id/time_star_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01.02"
                    android:drawableLeft="@drawable/ic_baseline_alarm_add"
                    android:drawableStart="@drawable/ic_baseline_alarm_add"/>
            <TextView
                    android:id="@+id/time_finish_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="09.02"
                    android:drawableLeft="@drawable/ic_baseline_alarm_off"
                    android:drawableStart="@drawable/ic_baseline_alarm_off"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>